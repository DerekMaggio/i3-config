# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#aaff00"
        color_degraded = "#00dddd"
        color_bad = "#ff2200"
        color_separator = "#ffffff"
}

order += "disk /"
order += "wireless wlp9s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "load"
order += "tztime localdatetime"
order += "volume master"

disk "/" {
        format = "DISK SPACE AVAIL: %avail "
        prefix_type = custom
}

wireless wlp9s0 {
        format_up = " NETWORK: %essid | QUAL:%quality | IP: %ip "
        format_down = " WIRELESS NETWORK DOWN "
}

battery 0 {
        format = "BATTERY: %status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

cpu_usage {
        format = " CPU USAGE: %usage "
}

load {
        format = " LOAD: %1min "
        max_threshold = 5
}

tztime localdatetime {
        format = " %Y-%m-%d %H:%M "
}

volume master {
        format = " VOLUME: %volume "
        format_muted = " VOLUME: MUTED "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
